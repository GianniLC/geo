@model Geo.Models.Absence
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "CreateAbsence";
}

<h1>Create a new absence request</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Request">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="absenceReason" class="control-label"></label>
                <input asp-for="absenceReason" class="form-control" />
                <span asp-validation-for="absenceReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserRefId" value="@ViewBag.id" type="hidden" class="form-control" />
                <span asp-validation-for="UserRefId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }