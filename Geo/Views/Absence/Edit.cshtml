@model Geo.Models.Absence

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit a form should only be visible if userID = 0 (or any other admin ID's)</h1>

<h4>Absence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="absenceReason" class="control-label"></label>
                <input asp-for="absenceReason" class="form-control" />
                <span asp-validation-for="absenceReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startDate" class="control-label"></label>
                <input asp-for="startDate" class="form-control" />
                <span asp-validation-for="startDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endDate" class="control-label"></label>
                <input asp-for="endDate" class="form-control" />
                <span asp-validation-for="endDate" class="text-danger"></span>
            </div>

            <div class="form-control">
                <label asp-for="approved" class="control-label"></label>
                <select asp-for="approved" class="form-control">
                    <option value="2">In review</option>
                    <option value="0">Not approved</option>
                    <option value="1">Approved</option>
                </select>
                <span asp-validation-for="approved" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
